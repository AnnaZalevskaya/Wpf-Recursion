<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" ResizeMode="NoResize">
    <Grid Background="#FFE5EAF5" Margin="0,0,0,-230" AutomationProperties.IsOffscreenBehavior="Default">
        <TextBox x:Name="NTextBox" HorizontalAlignment="Left" Margin="22,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="656" Height="20" FontFamily="Bahnschrift SemiLight Condensed" FontSize="16"/>
        <Button Content="Ввод" HorizontalAlignment="Left" Margin="692,17,0,0" VerticalAlignment="Top" Height="40" Width="85" Click="Button_Click" Background="#FF89AEA8" Foreground="White" BorderBrush="White" FontFamily="Bahnschrift SemiLight Condensed" FontSize="18"/>
        <Label Content="Введите число квадратов:" HorizontalAlignment="Left" Margin="22,6,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift SemiLight Condensed" FontSize="20" FontWeight="Normal"/>
        <Canvas Name="MainCanvas" Margin="5,64,10,0" Height="590" VerticalAlignment="Top"/>
    </Grid>
</Window>
